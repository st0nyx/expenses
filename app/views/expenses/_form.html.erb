
<%= simple_form_for(@expense) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :date %>
    <%= f.input :name %>
    <%= f.input :amount %>
    <%= f.association :store %>
    <%= f.association :kind %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
